SRCS		=	main.cpp \

OBJS		= $(SRCS:.cpp=.o)

CXX			= clang++
FLAGS		= -Wextra -Werror -Wall -I.
RM			= rm -Rf

NAME		= replace

all:		$(NAME)

$(NAME):	$(OBJS)
				$(CXX) $(FLAGS) -o $(NAME) $(OBJS)

clean:
				$(RM) $(OBJS)

fclean:		clean
				$(RM) $(NAME)

re:				fclean $(NAME)

test:		$(NAME)
				./replace text.txt banane orange
				./replace text.txt.replace "Je suis" "nous sommes"

.PHONY:		all clean fclean re test
